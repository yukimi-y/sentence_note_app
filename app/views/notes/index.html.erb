<h1>ノート一覧</h1>
<table>
  <thead>
  <tr>
    <th scope="col">No.</th>
    <th scope="col">タイトル</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @notes.each.with_index(1) do |note, i| %>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= note.title %></td>
      <td>
        <%= link_to "詳細", note %>
        <%= link_to "編集", edit_note_path(note) %>
        <%= link_to "削除", note, method: :delete, data: { confirm: "削除しますか?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>